#include <bits/stdc++.h>
using namespace std;

int main(){
 int n,k;
 cin>>n>>k;
 int arr[n];
 for(int i=0;i<n;i++){
    cin>>arr[i];
 }
 sort(arr,arr+n);
 int count =0;
 int i=0;
 int j=1;
 while(i<n){
    if(abs(arr[j]-arr[i])>=k){
        count+=n-j;
        i++;
        j=i+1;
    }else{
      j++;
    }
 }
 cout<<count<<endl;
 return 0;
}
