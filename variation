#include <bits/stdc++.h>
using namespace std;

int main(){
 int n,k;
 cin>>n>>k;
 int arr[n];
 for(int i=0;i<n;i++){
    cin>>arr[i];
 }
 sort(arr,arr+n);
 int count =0;
 int i=0;
 int j=1;
 while(i<n){
    if(abs(arr[j]-arr[i])>=k){
        count+=n-j;
        i++;
        j=i+1;
    }else{
      j++;
    }
 }
 cout<<count<<endl;
 return 0;
}

//or


int main(){
 int n,k;
 cin>>n>>k;
 int arr[n];
 for(int i=0;i<n;i++){
    cin>>arr[i];
 }
 sort(arr,arr+n);
 int count =0;
 int i=0;

 while(i<n){
        int si=i+1;
        int ei=n-1;
        int index=n;
         while(si<=ei){
            int mid=(si+ei)/2;
            if(abs(arr[mid]-arr[i])>=k){
                ei=mid-1;
                index=mid;
            }else{
            si=mid+1;
            }
         }
         count+=n-index;
    i++;
 }
 cout<<count<<endl;
 return 0;
}
